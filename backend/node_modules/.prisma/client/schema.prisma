generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LogEntry {
  id                  Int      @id @default(autoincrement())
  timestamp           DateTime
  source              String
  severity            Severity
  message             String
  anonymizedPatientId String? // hashed patient_id or null
  createdAt           DateTime @default(now())
}

enum Severity {
  info
  warning
  error
}
